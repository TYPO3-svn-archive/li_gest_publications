<?xml version="1.0" encoding="utf-8"?>
<!-- Fichier XML permettant de définir l'affichage des options du plugin  -->
<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<!-- Onglet Données: permet de sélectionner des dossiers  -->
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.sheet_general</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<!-- Zone de sélection de données  -->
					<pid>
						<TCEforms>
							<label>LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.pid</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>5</size>
								<maxitems>10</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
							</config>
						</TCEforms>
					</pid>
				</el>
		    </ROOT>
		</sDEF>
		<!-- Onglet filtres: permet de sélectionnés les publications à afficher suivant différents paramêtres  -->
		<filtres>
		    <ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.sheet_filtres</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<!-- Regoupement des filtres concernant les équipes  -->
					<groupeequipe>
						<type>array</type>
						<el>
							<!-- Filtrage des publications selon les équipes sélectionnées  -->
							<equipe>
								<TCEforms>
									<label>LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.equipe</label>
										<config>
											<type>select</type>
											<foreign_table>tx_ligestmembrelabo_Equipe</foreign_table>
											<foreign_table_where>AND tx_ligestmembrelabo_Equipe.sys_language_uid&lt;=0 ORDER BY tx_ligestmembrelabo_Equipe.Abreviation</foreign_table_where>
											<size>10</size>
											<minitems>0</minitems>
											<maxitems>99</maxitems>
										</config>
								</TCEforms>
							</equipe>
						</el>
					</groupeequipe>
					
					<!-- Regoupement des filtres concernant les membres -->
					<groupemembres>
						<type>array</type>
						<el>
							<!-- Filtrage des publications selon les membres sélectionnées  -->
							<membres>
								<TCEforms>
									<label>LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.membres</label>
										<config>
											<type>select</type>
											<foreign_table>tx_ligestmembrelabo_MembreDuLabo</foreign_table>
											<foreign_table_where>ORDER BY tx_ligestmembrelabo_MembreDuLabo.NomDUsage, tx_ligestmembrelabo_MembreDuLabo.Prenom</foreign_table_where>
											<size>10</size>
											<minitems>0</minitems>
											<maxitems>99</maxitems>
										</config>
								</TCEforms>
							</membres>
						</el>
					</groupemembres>
					
					<!-- Regoupement des filtres concernant les auteurs  -->
					<groupeauteurs>
						<type>array</type>
						<el>
							<!-- Filtrage des publications selon les auteurs sélectionnées  -->
							<auteurs>
								<TCEforms>
									<label>LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.auteurs</label>
										<config>
											<type>select</type>
											<foreign_table>tx_ligestpublications_Auteur</foreign_table>
											<foreign_table_where>ORDER BY tx_ligestpublications_Auteur.Nom, tx_ligestpublications_Auteur.Prenom</foreign_table_where>
											<size>10</size>
											<minitems>0</minitems>
											<maxitems>99</maxitems>
										</config>
								</TCEforms>
							</auteurs>
						</el>
					</groupeauteurs>
					
					<!-- Regoupement des filtres concernant les thèmes  -->
					<groupethemes>
						<type>array</type>
						<el>
							<!-- Filtrage des publications selon les thèmes sélectionnées  -->
							<themes>
								<TCEforms>
									<label>LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.themes</label>
										<config>
											<type>select</type>
											<foreign_table>tx_ligestpublications_Theme</foreign_table>
											<foreign_table_where>AND tx_ligestpublications_Theme.sys_language_uid&lt;=0 ORDER BY tx_ligestpublications_Theme.Libelle</foreign_table_where>
											<size>10</size>
											<minitems>0</minitems>
											<maxitems>99</maxitems>
										</config>
								</TCEforms>
							</themes>
						</el>
					</groupethemes>
					
					<!-- Regoupement des filtres concernant les thèmes  -->
					<groupeTypesPublication>
						<type>array</type>
						<el>
							<!-- Filtrage des publications selon les thèmes sélectionnées  -->
							<typePublication>
								<TCEforms>
									<label>LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.TypePublication</label>
										<config>
											<type>select</type>
											<foreign_table>tx_ligestpublications_TypePublication</foreign_table>
											<foreign_table_where>AND tx_ligestpublications_TypePublication.sys_language_uid&lt;=0 ORDER BY tx_ligestpublications_TypePublication.Libelle</foreign_table_where>
											<size>10</size>
											<minitems>0</minitems>
											<maxitems>99</maxitems>
										</config>
								</TCEforms>
							</typePublication>
						</el>
					</groupeTypesPublication>

					<!-- Regoupement des filtres concernant les publications  -->
					<groupepublications>
						<type>array</type>
						<el>
							<!-- Filtrage selon les dates de publications  -->
							<datepublication>
								<TCEforms>
									<label>LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.datepublication</label>
										<config>
											<type>select</type>
												<items type="array">
													<numIndex index="0" type="array">
														<numIndex index="0">LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.typedate.0</numIndex>
														<numIndex index="1">En Cours</numIndex>
													</numIndex>
													<numIndex index="1" type="array">
														<numIndex index="0">LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.typedate.1</numIndex>
														<numIndex index="1">Terminées</numIndex>
													</numIndex>
													<numIndex index="2" type="array">
														<numIndex index="0">LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.typedate.2</numIndex>
														<numIndex index="1">Toutes</numIndex>
													</numIndex>
										         </items>
										         <minitems>0</minitems>
										         <maxitems>1</maxitems>
												 <default>Toutes</default>
										         <size>1</size>
										</config>
								</TCEforms>
							</datepublication>
							
							<limitationdatedebut>
								<TCEforms>
									<exclude>1</exclude>
									<label>LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.limitationdatedebut</label>
									<config>
										<type>input</type>
						                <checkbox>0</checkbox>
						                <default>0</default>
										<size>10</size>
										<eval>int</eval>
									</config>
								</TCEforms>
							</limitationdatedebut>
							<limitationdatefin>
								<TCEforms>
									<exclude>1</exclude>
									<label>LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.limitationdatefin</label>
									<config>
										<type>input</type>
						                <checkbox>0</checkbox>
						                <default>0</default>
										<size>10</size>
										<eval>int</eval>
									</config>
								</TCEforms>
							</limitationdatefin>
							
							<!-- Publication internationale?  -->
							<internationale>
								<TCEforms>
									<label>LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.internationale</label>
										<config>
											<type>select</type>
												<items type="array">
													<numIndex index="0" type="array">
														<numIndex index="0">LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.internationale.0</numIndex>
														<numIndex index="1">Est nationale</numIndex>
													</numIndex>
													<numIndex index="1" type="array">
														<numIndex index="0">LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.internationale.1</numIndex>
														<numIndex index="1">Est internationale</numIndex>
													</numIndex>
													<numIndex index="2" type="array">
														<numIndex index="0">LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.internationale.2</numIndex>
														<numIndex index="1">Est internationale francophone</numIndex>
													</numIndex>
													<numIndex index="3" type="array">
														<numIndex index="0">LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.internationale.3</numIndex>
														<numIndex index="1">Peu importe</numIndex>
													</numIndex>
										         </items>
										         <minitems>0</minitems>
										         <maxitems>1</maxitems>
												 <default>Peu importe</default>
										         <size>1</size>
										</config>
								</TCEforms>
							</internationale>

							<!-- Publication: Conférence normale, ou invité d'une conférence?  -->
							<typeconference>
								<TCEforms>
									<label>LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.typeconference</label>
										<config>
											<type>select</type>
												<items type="array">
													<numIndex index="0" type="array">
														<numIndex index="0">LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.typeconference.0</numIndex>
														<numIndex index="1">Conference normale</numIndex>
													</numIndex>
													<numIndex index="1" type="array">
														<numIndex index="0">LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.typeconference.1</numIndex>
														<numIndex index="1">Invite</numIndex>
													</numIndex>
													<numIndex index="2" type="array">
														<numIndex index="0">LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.typeconference.2</numIndex>
														<numIndex index="1">Peu importe</numIndex>
													</numIndex>
										         </items>
										         <minitems>0</minitems>
										         <maxitems>1</maxitems>
												 <default>Peu importe</default>
										         <size>1</size>
										</config>
								</TCEforms>
							</typeconference>

							<!-- Publication: Chapitre d'un livre?  -->
							<typecontribution>
								<TCEforms>
									<label>LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.TypeContribution</label>
										<config>
											<type>select</type>
												<items type="array">
													<numIndex index="0" type="array">
														<numIndex index="0">LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.TypeContribution.1</numIndex>
														<numIndex index="1">Article ou chapitre</numIndex>
													</numIndex>
													<numIndex index="1" type="array">
														<numIndex index="0">LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.TypeContribution.0</numIndex>
														<numIndex index="1">Acte ou livre ou revue</numIndex>
													</numIndex>
													<numIndex index="2" type="array">
														<numIndex index="0">LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.TypeContribution.2</numIndex>
														<numIndex index="1">Peu importe</numIndex>
													</numIndex>
										         </items>
										         <minitems>0</minitems>
										         <maxitems>1</maxitems>
												 <default>Peu importe</default>
										         <size>1</size>
										</config>
								</TCEforms>
							</typecontribution>
							
							<!-- Publication: Vulgarisation?  -->
							<vulgarisation>
								<TCEforms>
									<label>LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.vulgarisation</label>
										<config>
											<type>select</type>
												<items type="array">
													<numIndex index="0" type="array">
														<numIndex index="0">LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.vulgarisation.0</numIndex>
														<numIndex index="1">Oui</numIndex>
													</numIndex>
													<numIndex index="1" type="array">
														<numIndex index="0">LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.vulgarisation.1</numIndex>
														<numIndex index="1">Non</numIndex>
													</numIndex>
													<numIndex index="2" type="array">
														<numIndex index="0">LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.vulgarisation.2</numIndex>
														<numIndex index="1">Peu importe</numIndex>
													</numIndex>
										         </items>
										         <minitems>0</minitems>
										         <maxitems>1</maxitems>
												 <default>Peu importe</default>
										         <size>1</size>
										</config>
								</TCEforms>
							</vulgarisation>
	
							<!-- Publication: Parue?  -->
							<parution>
								<TCEforms>
									<label>LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.parution</label>
										<config>
											<type>select</type>
												<items type="array">
													<numIndex index="0" type="array">
														<numIndex index="0">LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.parution.0</numIndex>
														<numIndex index="1">En Cours</numIndex>
													</numIndex>
													<numIndex index="1" type="array">
														<numIndex index="0">LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.parution.1</numIndex>
														<numIndex index="1">Parue</numIndex>
													</numIndex>
													<numIndex index="2" type="array">
														<numIndex index="0">LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.parution.2</numIndex>
														<numIndex index="1">Peu importe</numIndex>
													</numIndex>
										         </items>
										         <minitems>0</minitems>
										         <maxitems>1</maxitems>
												 <default>Peu importe</default>
										         <size>1</size>
										</config>
								</TCEforms>
							</parution>

							<!-- Année de parution  -->
							<anneeparution>
								<TCEforms>
									<exclude>1</exclude>
									<label>LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.anneeparution</label>
									<config>
										<type>input</type>
						                <checkbox>0</checkbox>
						                <default>0</default>
										<size>10</size>
										<eval>int</eval>
									</config>
								</TCEforms>
							</anneeparution>

						</el>
					</groupepublications>

				</el>
		    </ROOT>
		</filtres>
		<!-- Onglet affichage: permet de personnaliser l'affichage de certains champs sur le site  -->
		<affichage>
		    <ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.sheet_affichage</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<!-- Regoupement des options d'affichage concernant les balises de surlignage  -->
					<groupepersonnaliseraffichage>
						<type>array</type>
						<el>
							<baliseequipe>
								<TCEforms>
									<label>LLL:EXT:li_gest_membre_labo/locallang_db.xml:tt_content.pi_flexform.baliseequipe</label>
										<config>
											<type>select</type>
											<foreign_table>tx_ligestmembrelabo_Equipe</foreign_table>
											<foreign_table_where>AND tx_ligestmembrelabo_Equipe.sys_language_uid&lt;=0 ORDER BY tx_ligestmembrelabo_Equipe.Abreviation</foreign_table_where>
											<size>10</size>
											<minitems>0</minitems>
											<maxitems>99</maxitems>
										</config>
								</TCEforms>
							</baliseequipe>
							<balisedebut>
								<TCEforms>
									<exclude>1</exclude>
									<label>LLL:EXT:li_gest_membre_labo/locallang_db.xml:tt_content.pi_flexform.balisedebut</label>
									<config>
										<type>input</type>
										<default>&lt;b&gt;</default>
									</config>
								</TCEforms>
							</balisedebut>
							<balisefin>
								<TCEforms>
									<exclude>1</exclude>
									<label>LLL:EXT:li_gest_membre_labo/locallang_db.xml:tt_content.pi_flexform.balisefin</label>
									<config>
										<type>input</type>
										<default>&lt;/b&gt;</default>
									</config>
								</TCEforms>
							</balisefin>
						</el>
					</groupepersonnaliseraffichage>

					<!-- Regoupement des options d'affichage concernant le format des dates  -->
					<groupeformatdate>
						<type>array</type>
						<el>
							<formatdate>
								<TCEforms>
									<exclude>1</exclude>
									<label>LLL:EXT:li_gest_membre_labo/locallang_db.xml:tt_content.pi_flexform.formatdate</label>
									<config>
										<type>input</type>
										<default>d/m/Y</default>
									</config>
								</TCEforms>
							</formatdate>
						</el>
					</groupeformatdate>
	

					<!-- Regoupement des options d'affichage concernant les dates  -->
					<groupeaffichagedate>
						<type>array</type>
						<el>
							<DateDebut>
								<TCEforms>
									<exclude>1</exclude>
									<label>LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.DateDebut</label>
									<config>
										<type>input</type>
										<default>????-??-??</default>
									</config>
								</TCEforms>
							</DateDebut>
							<DateFin>
								<TCEforms>
									<exclude>1</exclude>
									<label>LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.DateFin</label>
									<config>
										<type>input</type>
										<default>????-??-??</default>
									</config>
								</TCEforms>
							</DateFin>
						</el>
					</groupeaffichagedate>
					
					<!-- Regoupement des options d'affichage concernant les dates  -->
					<groupeordreaffichage>
						<type>array</type>
						<el>
							<ordretitre>
								<TCEforms>
									<label>LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.ordretitre</label>
										<config>
											<type>select</type>
												<items type="array">
													<numIndex index="0" type="array">
														<numIndex index="0">LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.ordretitre.ASC</numIndex>
														<numIndex index="1">ASC</numIndex>
													</numIndex>
													<numIndex index="1" type="array">
														<numIndex index="0">LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.ordretitre.DESC</numIndex>
														<numIndex index="1">DESC</numIndex>
													</numIndex>
										         </items>
										         <minitems>0</minitems>
										         <maxitems>1</maxitems>
												 <default>ASC</default>
										         <size>1</size>
										</config>
								</TCEforms>
							</ordretitre>
							<ordreannee>
								<TCEforms>
									<label>LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.ordreannee</label>
										<config>
											<type>select</type>
												<items type="array">
													<numIndex index="0" type="array">
														<numIndex index="0">LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.ordreannee.ASC</numIndex>
														<numIndex index="1">ASC</numIndex>
													</numIndex>
													<numIndex index="1" type="array">
														<numIndex index="0">LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.ordreannee.DESC</numIndex>
														<numIndex index="1">DESC</numIndex>
													</numIndex>
										         </items>
										         <minitems>0</minitems>
										         <maxitems>1</maxitems>
												 <default>DESC</default>
										         <size>1</size>
										</config>
								</TCEforms>
							</ordreannee>
						</el>
					</groupeordreaffichage>
					
					
					
					
					<!-- Regoupement des options d'affichage concernant l'affichage du nombre de pages -->
					<groupepage>
						<type>array</type>
						<el>
							<nbpages>
								<TCEforms>
									<exclude>1</exclude>
									<label>LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.nbpages</label>
									<config>
										<type>input</type>
										<default>###Pages### p.</default>
									</config>
								</TCEforms>
							</nbpages>
							<plagepages>
								<TCEforms>
									<exclude>1</exclude>
									<label>LLL:EXT:li_gest_publications/locallang_db.xml:tt_content.pi_flexform.plagepages</label>
									<config>
										<type>input</type>
										<default>pp. ###PageDebut###-###PageFin###</default>
									</config>
								</TCEforms>
							</plagepages>
						</el>
					</groupepage>
					
					
					<!-- Regoupement des options d'affichage concernant l'édition de la publication -->
					<groupeediteur>
						<type>array</type>
